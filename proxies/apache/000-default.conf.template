<VirtualHost *:80>
    ProxyPass / http://$UPSTREAM_HOST:$UPSTREAM_PORT/
    $SET_NO_KEEP_ALIVE
</VirtualHost>

<VirtualHost *:443>
    SSLEngine on
    SSLCertificateFile "/etc/ssl/cert.pem"
    SSLCertificateKeyFile "/etc/ssl/key.pem"
    ProxyPass / http://$UPSTREAM_HOST:$UPSTREAM_PORT/
    $SET_NO_KEEP_ALIVE
</VirtualHost>
